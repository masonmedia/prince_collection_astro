---
import Layout from '../../layouts/Layout.astro';
import { Image } from 'astro:assets';
import crown from '../../assets/img/logos/logo-crown.png';
---

<Layout title="Welcome to Astro." description="Prince Collection">
	<main>
		<div class="container-fluid px-0">
            <div class="row min-vh-100 bg-dark text-pc">
                <div class="col-lg-12 d-flex flex-column justify-content-center align-items-center p-5">
					<Image style="width: 80px; height: 80px" src={crown} alt="Prince Collection logo"/>
					<h1 class="fw-bold text-light lh-1 mb-2 mt-3" style="font-size: 10vw;">Prince Collection</h1>
					<p class="fs-2 mb-3">The new standard in luxury travel.</p>
                </div>
            </div>
		</div>
		
	</main>
</Layout>
