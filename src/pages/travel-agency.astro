    <style scoped>

        /* The Masonry Container */
.masonry {
  padding: 10px;
  max-width: 100%;
  column-gap: 10px;
}

/* The Masonry Brick */
.item {
  margin-top: 10px;
  height: 100%;
}

.item:first-of-type {
  margin-top: 0;
  /* margin: 0 0 1.5em; */
}

.item img {
    border-radius: 10px;
}

@media only screen and (min-width: 1024px) {
  .masonry {
    column-count: 4;
  }
}

@media only screen and (max-width: 1023px) and (min-width: 768px) {
  .masonry {
    column-count: 3;
  }
}

@media only screen and (max-width: 767px) and (min-width: 540px) {
  .masonry {
    column-count: 2;
  }
}
