<script>
	// https://developer.mozilla.org/en-US/docs/Web/API/HTMLMediaElement/play
	// astro reinit script in SPA mode w/ astro:page-load
	document.addEventListener('astro:page-load', () => {
		let videoElem = document.getElementById("heroVideo");
		let playButton = document.getElementById("playbutton");

		playButton.addEventListener("click", handlePlayButton, false);
		async function playVideo() {
			try {
				await videoElem.play();
				playButton.classList.remove("bi-play-circle");
				playButton.classList.add("opacity-50", "bi-pause-circle");
			} catch (err) {
				playButton.classList.remove("opacity-50");
			}
		}

		function handlePlayButton() {
			if (videoElem.paused) {
				playVideo();
			} else {
				videoElem.pause();
				playButton.classList.remove("opacity-50", "bi-pause-circle");
				playButton.classList.add("bi-play-circle");
			}
		}
	});
</script>
