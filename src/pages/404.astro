---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Prince Collection | Page Not Found" description="The page you're looking for doesn't exist. Please return to the Prince Collection homepage!">
    <div class="container-fluid px-0 bg-pc-10">
        <div class="row min-vh-100 p-5 bg-gold-2">
            <div class="col-lg-6 offset-lg-3 d-flex flex-column justify-content-center align-items-center text-center p-5">
                <span class="badge rounded-pill fw-bold text-pc-light bg-pc-dark py-2 px-3">Page not found</span>
                <h1 class="font-inter fw-900 lh-1 my-2 text-pc-light" style="font-size: 22vw; letter-spacing: -4px; filter: drop-shadow(2px 2px 5px grey)">404</h1>
                <p class="fs-4 text-black-50 fw-bold mt-0 mb-3">The page you're looking for doesn't exist. Please return to the Prince Collection homepage!</p>
                <div class="d-flex">
                    <button onclick="history.back()" class="btn btn-light bg-pc-dark text-pc-light fw-bold rounded-3 px-4 me-1">Back</button>
                    <a href="/">
                        <button class="btn btn-light bg-pc-dark text-pc-light fw-bold rounded-3 px-4">Home</button>
                    </a>
                
                </div>
            </div>
        </div>
    </div>
</Layout>